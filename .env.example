# Hea Configuration

# ─── Database ────────────────────────────────────────
DATABASE_URL=sqlite:///./hea.db  # Use PostgreSQL for production
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ─── AWS Infrastructure ──────────────────────────────
AWS_REGION=eu-west-2
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
# S3 Buckets (Must match Terraform outputs)
MODEL_ARTIFACTS_BUCKET=hea-prototype-model-artifacts
FEATURE_STORE_BUCKET=hea-prototype-feature-store

# ─── Security ────────────────────────────────────────
SECRET_KEY=your_super_secret_key_change_in_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
CORS_ORIGINS=["http://localhost:5173"]

# ─── ML Configuration ────────────────────────────────
# Paths to local models or S3 keys
NLP_MODEL_PATH=ml/trained_models/weak_signal_nlp/
TS_MODEL_PATH=ml/trained_models/timeseries_detector/
ENABLE_RULE_BASED_FALLBACK=true

# ─── Privacy & Compliance ────────────────────────────
DATA_RETENTION_DAYS=365
ENABLE_Audit_LOGGING=true
